@{
    ViewData["Title"] = "Donazioni";
}
<h1>Supporta Play Vault</h1>

<form asp-controller="Donazioni" asp-action="CreateCheckout" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="amount">Inserisci importo (â‚¬):</label>
        <input type="number" id="amount" name="amount" min="1" step="0.01" class="form-control" required />
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Dona</button>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}