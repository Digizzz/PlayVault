<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>🎮 Play Vault</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .star {
            position: absolute;
            background: white;
            border-radius: 50%;
            opacity: 0.8;

            animation: twinkle 3s infinite ease-in-out;
        }

         twinkle {
            0%, 100% {
                opacity: 0.3;
                transform: scale(1);
            }

            50% {
                opacity: 1;
                transform: scale(1.2);
            }
        }

        .container {
            position: relative;
            z-index: 2;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .title {
            font-size: 4rem;
            font-weight: 800;
            background: linear-gradient(45deg, #ff6b6b, #ffd93d, #6bcf7f, #4d9de0);
            background-size: 300% 300%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
        }

        @@keyframes gradientShift {

            0%, 100% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }
        }

        .subtitle {
            font-size: 1.3rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 300;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .navigation-section {
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }

        .main-cards {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 3rem;
        }

        .office-card-container {
            display: flex;
            justify-content: center;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            position: relative;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .card:hover::before {
            transform: translateX(100%);
        }

        .card:hover {
            transform: translateY(-20px) scale(1.02);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
            border-color: rgba(255, 255, 255, 0.4);
        }

        .office-card {
            max-width: 450px;
            width: 100%;
        }

        .card-image {
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
            overflow: hidden;
        }

        .games-card .card-image {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        }

        .users-card .card-image {
            background: linear-gradient(135deg, #4d9de0, #15548d);
        }

        .office-card .card-image {
            background: linear-gradient(135deg, #6bcf7f, #2d8a47);
        }

        .card-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 4rem;
        }

        @@keyframes float {

            0%, 100% {
                transform: translate(-50%, -50%) translateY(0px);
            }

            50% {
                transform: translate(-50%, -50%) translateY(-10px);
            }
        }

        .card-content {
            padding: 2rem;
            text-align: center;
        }

        .card-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .card-description {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .btn {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .btn-games {
            background: linear-gradient(45deg, #ff6b6b, #ee5a24);
        }

        .btn-users {
            background: linear-gradient(45deg, #4d9de0, #15548d);
        }

        .btn-office {
            background: linear-gradient(45deg, #6bcf7f, #2d8a47);
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
            animation: fadeInUp 1s ease-out 0.6s both;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.15);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: #ffd93d;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

         fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }


        fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

         (max-width: 768px) {
            .title {
                font-size: 2.5rem;
            }

            .cards-container {

                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .office-card {
                max-width: none;
            }
        }

         (max-width: 768px) {
            .title {
                font-size: 2.5rem;
            }

            .container {
                padding: 1rem;
            }

            .navigation-section {
                gap: 2rem;
            }
        }

        /* Particle animation */
        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            pointer-events: none;
            animation: particleFloat 6s linear infinite;
        }


        particleFloat {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }

            10% {
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }
    </style>
</head>
<body>
    <div class="stars" id="stars"></div>

    <div class="container">
        <div class="header">
            <h1 class="title">🎮 Play Vault</h1>
            <p class="subtitle">Gestisci la tua collezione di videogiochi e i tuoi utenti con stile</p>
        </div>

        <div class="navigation-section">
            <div class="main-cards">
                <div class="card games-card" onclick="navigateToGames()">
                    <div class="card-image">
                        <div class="card-icon">🎮</div>
                    </div>
                    <div class="card-content">
                        <h2 class="card-title">Gestione Giochi</h2>
                        <p class="card-description">Scopri, aggiungi e gestisci il tuo catalogo di videogiochi con un'interfaccia moderna e intuitiva.</p>
                        <button class="btn btn-games">Esplora Giochi</button>
                    </div>
                </div>

                <div class="card users-card" onclick="navigateToUsers()">
                    <div class="card-image">
                        <div class="card-icon">👥</div>
                    </div>
                    <div class="card-content">
                        <h2 class="card-title">Gestione Utenti</h2>
                        <p class="card-description">Monitora e gestisci la tua community di giocatori con strumenti avanzati di amministrazione.</p>
                        <button class="btn btn-users">Gestisci Utenti</button>
                    </div>
                </div>
            </div>

            <div class="office-card-container">
                <div class="card office-card" onclick="navigateToOffice()">
                    <div class="card-image">
                        <div class="card-icon">🏢</div>
                    </div>
                    <div class="card-content">
                        <h2 class="card-title">Ufficio Aziendale</h2>
                        <p class="card-description">Accedi al pannello di controllo amministrativo e alle funzionalità di gestione aziendale.</p>
                        <button class="btn btn-office">Visita Ufficio</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Create animated stars
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const numberOfStars = 50;

            for (let i = 0; i < numberOfStars; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.width = star.style.height = Math.random() * 3 + 1 + 'px';
                star.style.animationDelay = Math.random() * 3 + 's';
                starsContainer.appendChild(star);
            }
        }

        // Create floating particles
        function createParticle() {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.width = particle.style.height = Math.random() * 5 + 2 + 'px';
            document.body.appendChild(particle);

            setTimeout(() => {
                particle.remove();
            }, 6000);
        }

        // Animate counters
        function animateCounter(element, target) {
            const increment = target / 100;
            let current = 0;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 20);
        }

        // Navigation functions - ora portano alle vere pagine
        function navigateToGames() {
            window.location.href = '/Games';
        }

        function navigateToUsers() {
            window.location.href = '/Utentes';
        }

        function navigateToOffice() {
            window.location.href = '/Ufficio';
        }

        // Initialize animations
        document.addEventListener('DOMContentLoaded', function () {
            createStars();

            // Animate counters
            setTimeout(() => {
                animateCounter(document.getElementById('gamesCount'), 247);
                animateCounter(document.getElementById('usersCount'), 1892);
                animateCounter(document.getElementById('salesCount'), 15700);

                // Special handling for rating
                let ratingCurrent = 0;
                const ratingTimer = setInterval(() => {
                    ratingCurrent += 0.1;
                    if (ratingCurrent >= 4.8) {
                        document.getElementById('ratingCount').textContent = '4.8';
                        clearInterval(ratingTimer);
                    } else {
                        document.getElementById('ratingCount').textContent = ratingCurrent.toFixed(1);
                    }
                }, 30);
            }, 1000);

            // Create particles periodically
            setInterval(createParticle, 3000);
        });

        // Add mouse move effect
        document.addEventListener('mousemove', function (e) {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                const centerX = rect.width / 2;
                const centerY = rect.height / 2;

                const rotateX = (y - centerY) / 20;
                const rotateY = (centerX - x) / 20;

                if (x >= 0 && x <= rect.width && y >= 0 && y <= rect.height) {
                    card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-20px) scale(1.02)`;
                }
            });
        });

        // Reset card transforms when mouse leaves
        document.addEventListener('mouseleave', function () {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                card.style.transform = '';
            });
        });
    </script>
</body>
</html>